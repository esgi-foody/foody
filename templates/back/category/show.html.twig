{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td style="background-color: {{ category.hexaColor }}">{{ category.hexaColor }}</td>

            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_category_index') }}">Retour</a>

    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('back/category/_delete_form.html.twig') }}
{% endblock %}
