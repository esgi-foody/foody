{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Couleur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td style="background-color: {{ category.hexaColor }}">{{ category.hexaColor }}</td>
                <td>
                    <a href="{{ path('app_back_category_show', {'id': category.id}) }}">Voir</a>
                    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_category_new') }}">Créer une nouvelle catégorie</a>
{% endblock %}
